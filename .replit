[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BigQuery Pipeline"

[[workflows.workflow]]
name = "Django Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "BigQuery Pipeline"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py bigquery_pipeline --limit 100"

[workflows.workflow.metadata]
outputType = "console"
