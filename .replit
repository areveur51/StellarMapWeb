run = ["python", "manage.py", "runserver", "0.0.0.0:3000"]
entrypoint = "manage.py"
modules = ["python-3.10:v18-20230807-322e88b", "postgresql-16"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "graphviz", "iana-etc", "libev", "plantuml"]

[unitTest]
language = "python3"

[deployment]
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "4", "--timeout", "120", "StellarMapWeb.wsgi:application"]
deploymentTarget = "autoscale"
build = ["python", "manage.py", "collectstatic", "--noinput"]

