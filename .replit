run = ["python", "manage.py", "runserver", "0.0.0.0:3000"]
entrypoint = "manage.py"
modules = ["python-3.10:v18-20230807-322e88b", "postgresql-16"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "graphviz", "iana-etc", "libev", "plantuml", "vim-full"]

[unitTest]
language = "python3"

[deployment]
run = ["sh", "-c", "gunicorn --bind 0.0.0.0:3000 --workers 4 --timeout 120 StellarMapWeb.wsgi:application"]
deploymentTarget = "autoscale"
build = ["python", "manage.py", "collectstatic", "--noinput"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37397
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BigQuery Pipeline"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Pipeline"

[[workflows.workflow]]
name = "BigQuery Pipeline"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py bigquery_pipeline --limit 100"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Django Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "API Pipeline"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "while true; do python manage.py api_pipeline --limit 3; sleep 120; done"

[workflows.workflow.metadata]
outputType = "console"
