# ====================
# Django Core Settings
# ====================
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-secure-one
DEBUG=True
DJANGO_SETTINGS_MODULE=StellarMapWeb.settings.settings_base

# Production: Set DEBUG=False and use production settings
# DJANGO_SETTINGS_MODULE=StellarMapWeb.settings.production

# ====================
# Security Settings (Production)
# ====================
# Comma-separated list of allowed hosts (production only)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# SSL/HTTPS Settings (set to False for local development)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Production: Enable these for HTTPS
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# ====================
# Database Settings
# ====================
# Astra DB (Cassandra) - Required for production
ASTRA_DB_TOKEN=your-astra-db-token-here
CASSANDRA_DB_NAME=stellarmapwebastradb
CASSANDRA_KEYSPACE=stellarmapweb_keyspace

# ====================
# Cache Settings (Optional)
# ====================
# Redis URL for production caching (leave empty for local memory cache)
REDIS_URL=

# ====================
# Email Settings (Optional)
# ====================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@stellarmapweb.com
SERVER_EMAIL=server@stellarmapweb.com

# Admin email for error notifications
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@stellarmapweb.com

# ====================
# Error Monitoring (Optional)
# ====================
SENTRY_DSN=

# ====================
# Logging
# ====================
DJANGO_LOG_LEVEL=INFO
